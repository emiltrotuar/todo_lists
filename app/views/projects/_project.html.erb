<div class="prj">
	<p>
		<h4 class="new_class"><%= project.name %></h4> 
		<%= link_to " remove ", project,  method: :delete, class: "new_class" %>
	</p>
	<div class="controls input-append">
		<%= form_for project.tasks.new, remote: true do |f| %>
		  <input type="hidden" name="prj_id" value="<%= project.id %>" />
			<%= link_to image_tag("plus.png") %>
			<%= f.text_field :content, style: "width: 280px" %>
			<%= f.submit "Add task", class: "btn btn-success" %>
		<% end %>
  </div>
  <div id="incomplete_tasks">
  	<% if Project.find(project.id).tasks.empty? %>
			<%= render text: "no records" %>
		<% else %>
		  <%= render project.tasks %>
		<% end %>
	</div>
</div>