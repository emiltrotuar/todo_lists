var tc = '#task_content_<%= @task.id %>'
$(tc).closest('tr').find('#task_complete').prop('disabled', true);
$(tc).hide().after('<%= j render("edit") %>');
$(tc).closest('td').find('.date').css('display','none');
$('#edit_task_content_<%= @task.id %>').select();
$('.dp').datepicker({ dateFormat: "d M", onClose: function(){ this.focus(); } });
$('.ed_task_inp').css('height', '20px').autoResize({
	onResize : function() {
		$(this).css({opacity:0.8});
	},
	animateCallback : function() {
		$(this).css({opacity:1});
	},
	animateDuration : 300,
	extraSpace : 0
});