<tr id="task_<%= task.id %>">
	<td width="10px">
	<% if task.complete? %>
		<input type="checkbox" checked>
	<% else %>
		<input type="checkbox">
	<% end %>	
	</td>
	<td width="auto">
		<p><%= task.content %></p>
	</td>
	<td width="80px" align="center">
		<%= image_tag "arrows.png", id: "reorder", :size => "22x22", :border => 0 %>
		<%= link_to image_tag("edit.png", :size => "16x16", :border => 0), "/tasks/#{task.id}/edit", style: "display: inline", remote: true %>
		<%= link_to image_tag("del.png", :size => "24x24", :border => 0), task, method: :delete, style: "display: inline" %>
	</td>
</tr>
